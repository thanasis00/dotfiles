[core]
    editor = vim

[user]
    name = Thanasis Katsadas
    email = thanasis00@gmail.com

[merge]
    ff = false
    commit = false

[color]
    ui = true

[alias]
    st = status
    co = checkout
    b = branch
    ba = branch -a
    bl = blame
    fa = fetch --all
    nv = commit --no-verify
    ls = log --show-signature
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset by %C(yellow)%ae%Creset' --abbrev-commit --date=relative
    lgg = log --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset by %C(yellow)%ae%Creset' --abbrev-commit --date=relative

[sendemail]
    smtpencryption = tls
    smtpserver = mail.google.com
    smtpuser = XXX
    smtpserverport = 587

[rerere]
    enabled = true

[push]
    default = matching
